generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"] 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String   @unique
  password  String
  
  xp        Int      @default(0)
  level     Int      @default(1)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}